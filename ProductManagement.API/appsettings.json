{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  
  "AuditSettings": {
    "TablesToSkip": [
      "AccessLog",
      "AuditTrails",
      "Attachment"
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\MSSQLLocalDB;Database=urWave-ProductManagement;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "JwtSettings": {
    "Issuer": "ProductManagement-API",
    "Audience": "ProductManagement-Web",
    "SecretKey": "f5422e6cdfde4af3bf631c7dd1f80b97f5422e6cdfde4af3bf631c7dd1f80b97",
    "expire": "99999"

  },
  "NLog": {
    "targets": {
      "infoFile": {
        "type": "File",
        "fileName": "logs/info.log",
        "layout": "${longdate} | ${level} | ${message} ${exception:format=tostring}"
      },
      "debugFile": {
        "type": "File",
        "fileName": "logs/debug.log",
        "layout": "${longdate} | ${level} | ${message} ${exception:format=tostring}"
      },
      "warnFile": {
        "type": "File",
        "fileName": "logs/warning.log",
        "layout": "${longdate} | ${level} | ${message} ${exception:format=tostring}"
      },
      "errorFile": {
        "type": "File",
        "fileName": "logs/error.log",
        "layout": "${longdate} | ${level} | ${message} ${exception:format=tostring}"
      },
      "exceptionFile": {
        "type": "File",
        "fileName": "logs/exception.log",
        "layout": "${longdate} | ${level} | ${message} ${exception:format=tostring}"
      },
      "console": {
        "type": "Console",
        "layout": "${longdate} | ${level} | ${message} ${exception:format=tostring}"
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Info",
        "maxLevel": "Info",
        "writeTo": "infoFile,console"
      },
      {
        "logger": "*",
        "minLevel": "Debug",
        "maxLevel": "Debug",
        "writeTo": "debugFile"
      },
      {
        "logger": "*",
        "minLevel": "Warn",
        "maxLevel": "Warn",
        "writeTo": "warnFile,console"
      },
      {
        "logger": "*",
        "minLevel": "Error",
        "maxLevel": "Error",
        "writeTo": "errorFile,console"
      },
      {
        "logger": "*",
        "minLevel": "Error",
        "writeTo": "exceptionFile,console",
        "filter": "hasException"
      }
    ]
  }
}
